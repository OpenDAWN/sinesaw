@require "../variables"

.ui.playback-control
  margin 0
  flex-grow 1
  display flex
  justify-content space-between
  background-color ctrl-bg-color
  border-bottom none
  position relative

  .group
    flex-shrink 0
    display flex

    &.playback,
    &.menu,
    &.controls,
    &.tempo
      flex-grow 0

    &.fill
      flex-grow 1
      text-align right
      padding 0 margin

  select
    height 20px
    margin margin
    background-color bg-color

  .ui.knob
    display flex
    flex-flow row nowrap
    align-items center
    margin (margin - 2px) margin

    label
      margin 0 0 0 margin
      padding 0 0 0 margin
      border-left solid 1px med-line-color


  .icon
    display inline-block
    font-size 20px
    line-height 20px
    width 20px
    height 20px
    padding margin
    color dark-line-color
    box-sizing content-box
    transition color animation-speed, background-color animation-speed

    &:hover
      color c2
      background-color line-color

    &.active,
    &:active
      color c3

  .logo
    position absolute
    top 0
    left 50%
    width 100px
    margin-left -50px
    display inline-block
    font font
    font-size 20px
    line-height 20px
    padding margin 0
    color med-line-color
    text-align center

