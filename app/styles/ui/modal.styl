@require "../variables"

.modal-backdrop
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index 99
  background #000
  opacity 0.65

.modal-body
  z-index 100
  position absolute
  top 50%
  left 50%
  width 400px
  height 200px
  margin-left -200px
  margin-top -100px
  background bg-color
  display flex
  flex-flow column nowrap


// animations

modal-animation-length = 0.3s

.modal-enter
  .modal-backdrop
    opacity 0
    -webkit-transition opacity modal-animation-length

  .modal-body
    opacity 0
    -webkit-transition -webkit-transform modal-animation-length, opacity modal-animation-length
    -webkit-transform scale(1.5)

.modal-enter.modal-enter-active
  .modal-backdrop
    opacity 0.65

  .modal-body
    opacity 1
    -webkit-transform scale(1)

.modal-leave

  .modal-backdrop
    -webkit-transition opacity modal-animation-length

  .modal-body
    -webkit-transition opacity modal-animation-length, -webkit-transform modal-animation-length
    -webkit-transform scale(1)

.modal-leave-active
  .modal-backdrop
    opacity 0

  .modal-body
    opacity 0
    -webkit-transform scale(1.2)
