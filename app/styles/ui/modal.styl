@require "../variables"

.modal-backdrop
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index 99
  background #000
  opacity 0.65

.modal-body
  z-index 100
  position absolute
  top 50%
  left 50%
  width 400px
  height 200px
  margin-left -200px
  margin-top -100px
  background bg-color
  display flex
  flex-flow column nowrap
